<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/imgIntro"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        app:lottie_rawRes="@raw/buttons_fragment"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <Button
            android:id="@+id/main_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/secondary_button_background"
            android:layout_marginHorizontal="20dp"
            app:backgroundTint="#ebf1eb"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#2F782E"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Choose a new dish"/>

        <Space
            android:layout_width="0dp"
            android:layout_height="30dp"/>

        <Button
            android:id="@+id/secondary_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/secondary_button_background"
            android:layout_marginHorizontal="20dp"
            app:backgroundTint="#2F782E"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:fontFamily="@font/roboto_regular"
            android:text="Favourite recipes" />
    </LinearLayout>
</FrameLayout>